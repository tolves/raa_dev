<div>
  <table>
    <tr>
      <td>
        <%= link_to :Index, :root %>
      </td>
      <td>
        <% if logged_in? %>
          <h1>You are Logged In, <%= current_user.name %></h1>
        <%end%>
      </td>
      <td>
        <% if !session[:user_id]%>
          <%= button_to :Login, :login, method: :get%>
          <%= button_to 'Sign Up', :new_user, method: :get%>
        <% else %>
          <%= button_to 'My account', user_path(session[:user_id]) ,method: :get%>
          <%= button_to 'Sign Out', :sign_out, method: :post%></td>
        <%end%>
      </td>
    </tr>
  </table>
</div>
<% flash.each do |type, msg| %>
  <p><%= msg %></p>
<% end %>
<%console%>


